<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>BetterReads | Reader Books</title>
		<%- include('../partials/head'); %>
	</head>
	<body>
		<%- include('../partials/readerNav'); %>

		<main class="flex grow flex-col px-3 mt-3 gap-3">
			<h1 class="text-2xl font-dm">My Books</h1>

			<div
				class="grid gap-3 mt-3 md:grid-cols-3 md:w-full md:gap-5 lg:grid-cols-5">
				<% readerBooks.forEach((book) => { %>
				<div
					class="border-b-4 md:border-[#7e49ba] md:border-4 md:p-3 md:rounded-xl">
					<h1 class="text-xl font-dm mb-3"><%= book.title %></h1>
					<p>
						<span class="font-bold">Date Published:</span> <%=
						book.datePublished %>
					</p>
					<p>
						<span class="font-bold">Description:</span> <%= book.description %>
					</p>
				</div>
				<% }); %>
			</div>
		</main>

		<%- include('../partials/readerFooter'); %>
	</body>
</html>
